{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "paths": {
      "~provider/*": [
        "src/modules/provider/*"
      ],
      "~action/*": [
        "src/modules/action/*"
      ],
      "~file/*": [
        "src/modules/file/*"
      ],
      "~category/*": [
        "src/modules/category/*"
      ],
      "~i18n": [
        "src/i18n"
      ],
      "~plugins": [
        "src/plugins"
      ],
      "~base/*": [
        "src/common/base/*"
      ],
      "~config/*": [
        "src/common/config/*"
      ],
      "~decorators/*": [
        "src/common/decorators/*"
      ],
      "~exceptions/*": [
        "src/common/exceptions/*"
      ],
      "~filters/*": [
        "src/common/filters/*"
      ],
      "~guards/*": [
        "src/common/guards/*"
      ],
      "~helpers/*": [
        "src/common/helpers/*"
      ],
      "~pipes/*": [
        "src/common/pipes/*"
      ],
      "~common": [
        "src/common"
      ],
      "~auth/*": [
        "src/modules/auth/*"
      ],
      "~role/*": [
        "src/modules/role/*"
      ],
      "~user/*": [
        "src/modules/user/*"
      ],
      "~product/*": [
        "src/modules/product/*"
      ],
      "~database/*": [
        "database/*"
      ]
    },
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
}